{
  "name": "Collab Notebook Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/jupyter-notebook:1": {}
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "forwardPorts": [8888],
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-collaboration",
        "ms-vscode.live-share"
      ]
    }
  }
}
