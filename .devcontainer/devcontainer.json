{
  "name": "Python + Jupyter Collaboration",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [8888],
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-collaboration"
      ]
    }
  },
  "postCreateCommand": "pip install --upgrade pip && pip install notebook jupyter_collaboration",
  "overrideCommand": false
}
